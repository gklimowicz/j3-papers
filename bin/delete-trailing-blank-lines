#!/usr/bin/env bash

set -e -u -o pipefail

CMD="$(basename $0)"
CMD_DIR="$(dirname $0)"
function usage {
    echo "Usage: $CMD [-hnrv]" 1>&2
    echo "-h        Print this help message." 1>&2
    echo "-n        Dry run. Don't execute commands." 1>&2
    echo "-v        Verbose. Print extra information if appropriate." 1>&2
    echo "Remove trailing blank lines." 1>&2
}

DRY_RUN=
ECHO=
VFLAG=
while getopts hnv\? OPTCHAR; do
    case $OPTCHAR in
        h)  usage; exit 0;;
        n)  DRY_RUN=1 ECHO=echo;;
        v)  VFLAG=1;;
    esac
done

shift $(($OPTIND - 1))

case $# in
    0)  ;;
    *)  usage; exit 1;;
esac

export LC_ALL=C
sed -e :a -e '/^\n*$/{$d;N;ba' -e '}'
